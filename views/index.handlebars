<main class="container">
    <img class="logo" src="./assets/img/burger.png" />
    <p class="title">Eat-Da-Burger!</p>
    <div class="row justify-content-center">
        <div class="col-sm-5 pr-0">
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <li>
                    <div class="card text-center not-devoured-card">
                        <div class="card-body">
                            {{burger_name}}
                        </div>                     
                    </div> 
                    <button class="btn btn-light"data-id="{{id}}">Devour</button>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-sm-5 pl-2">
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <li>
                    <div class="card-header">
                        {{burger_name}}
                    </div>                   
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 text-center">
            <form id="burgerForm">
                <input type="text" id="burger_name" name="burger_name" />
                <button id="submitBtn"  class="btn btn-primary">Submit</button>
            </form>
            <p>Enter a burger you want to eat then click the "Submit" button</p>
        </div>
    </div>
</main>